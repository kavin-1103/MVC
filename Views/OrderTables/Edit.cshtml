

@model Reservation_Management.Models.OrderTable

@{
    ViewData["Title"] = "Edit";
}

<h1>Confirm Booking</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form id="confirmForm" asp-action="Edit" onsubmit="return validateForm()">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="TableId" />
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input id="confirmCheckbox" class="form-check-input" type="checkbox" /> Confirm Booking
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    <script>
        function validateForm() {
            var checkbox = document.getElementById("confirmCheckbox");
            if (checkbox.checked) {
                return true; 
            } else {
                //Displays alert Message
                alert("Please confirm the booking."); 
                return false; 
            }
        }
    </script>
}
