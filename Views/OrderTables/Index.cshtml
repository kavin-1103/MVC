@model IEnumerable<Reservation_Management.Models.OrderTable>


@{
    ViewData["Title"] = "Index";
}

<h1>Available Tables</h1>
<br />

<div class="container">
    <div class="row">
        @foreach (var buttonId in Model)
        {
            if(@buttonId.IsBooked)
            {
                <div class="col-sm-6 col-md-4 col-lg-3 p-4">
                    <a class="btn btn-danger"  disabled>Table @buttonId.TableId</a>
                </div>
               
            }
            else
            {
                <div class="col-sm-6 col-md-4 col-lg-3 p-4">
                    <a class="btn btn-success" type="submit" asp-controller="OrderTables" asp-action="Edit" asp-route-id="@buttonId.TableId">Table @buttonId.TableId</a>
                </div>
            }
        }
    </div>
</div>
